    {
      "id": "CMD-003",
      "command": "chmod",
      "category": "File Permissions",
      "syntax": "chmod [options] mode file...",
      "description": "Changes file permissions",
      "detailed_explanation": "chmod (change mode) alters the permissions of files and directories. Linux uses a permission system with three categories: user (owner), group, and others. Each category can have read (r), write (w), and execute (x) permissions.",
      "common_options": [
        {
          "option": "-R",
          "description": "Change files and directories recursively"
        },
        {
          "option": "-v",
          "description": "Verbose output"
        },
        {
          "option": "-c",
          "description": "Like verbose but report only when a change is made"
        }
      ],
      "permission_modes": [
        {
          "type": "Symbolic",
          "examples": [
            "u+x (add execute permission for user)",
            "g-w (remove write permission for group)",
            "o=r (set others to read only)",
            "a+rwx (add all permissions for all)"
          ]
        },
        {
          "type": "Octal",
          "examples": [
            "755 (rwxr-xr-x)",
            "644 (rw-r--r--)",
            "777 (rwxrwxrwx)",
            "600 (rw-------)"
          ]
        }
      ],
      "use_cases": [
        "Making scripts executable",
        "Securing sensitive files",
        "Setting up shared directories",
        "Correcting permission issues"
      ],
      "examples": [
        "chmod +x script.sh",
        "chmod 600 ~/.ssh/id_rsa",
        "chmod -R 755 public_html/"
      ],
      "related_commands": ["chown", "umask", "ls -l"],
      "installation_info": "Pre-installed in all Linux distributions as part of GNU coreutils",
      "skill_level": "Intermediate",
      "security_considerations": "Incorrect permissions can expose sensitive data or make system vulnerable. Never use 'chmod 777' unless absolutely necessary."
    },
