    {
      "id": "CMD-001",
      "command": "ls",
      "category": "File Management",
      "syntax": "ls [options] [directory]",
      "description": "Lists directory contents",
      "detailed_explanation": "The ls command is one of the most frequently used commands in Linux. It displays the contents of directories including files and subdirectories. By default, it shows the contents of the current directory in a compact format.",
      "common_options": [
        {
          "option": "-l",
          "description": "Long listing format showing permissions, ownership, size, and modification date"
        },
        {
          "option": "-a",
          "description": "Show all files including hidden files (starting with .)"
        },
        {
          "option": "-h",
          "description": "Human readable sizes (e.g., 1K, 234M, 2G)"
        },
        {
          "option": "-r",
          "description": "Reverse order while sorting"
        },
        {
          "option": "-t",
          "description": "Sort by modification time, newest first"
        }
      ],
      "use_cases": [
        "Checking what files are in a directory",
        "Verifying file permissions and ownership",
        "Finding recently modified files",
        "Inspecting hidden configuration files"
      ],
      "examples": [
        "ls -la /home/user",
        "ls -lh *.txt",
        "ls -t | head -5"
      ],
      "related_commands": ["dir", "tree", "stat"],
      "installation_info": "Pre-installed in all Linux distributions as part of GNU coreutils",
      "skill_level": "Beginner",
      "security_considerations": "Regular users can only see files they have permissions for. Use with caution when examining system directories."
    },
    {
      "id": "CMD-002",
      "command": "grep",
      "category": "Text Processing",
      "syntax": "grep [options] pattern [file...]",
      "description": "Searches for patterns in files",
      "detailed_explanation": "grep (Global Regular Expression Print) searches input files for lines containing a match to a given pattern. It's an extremely powerful tool for text processing and log analysis.",
      "common_options": [
        {
          "option": "-i",
          "description": "Ignore case distinctions"
        },
        {
          "option": "-r",
          "description": "Recursive search through directories"
        },
        {
          "option": "-n",
          "description": "Show line numbers"
        },
        {
          "option": "-v",
          "description": "Invert match (show non-matching lines)"
        },
        {
          "option": "-E",
          "description": "Extended regular expressions (equivalent to egrep)"
        }
      ],
      "use_cases": [
        "Searching for error messages in log files",
        "Filtering command output",
        "Finding specific configuration settings",
        "Extracting data from files"
