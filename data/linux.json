      "command": "find",
      "category": "File Search",
      "syntax": "find [path...] [expression]",
      "description": "Searches for files in a directory hierarchy",
      "detailed_explanation": "find is a powerful command-line utility that searches for files and directories based on various criteria like name, size, modification time, permissions, etc. It can execute commands on found files.",
      "common_expressions": [
        {
          "expression": "-name pattern",
          "description": "Search by filename (supports wildcards)"
        },
        {
          "expression": "-type f/d",
          "description": "Search for files (f) or directories (d)"
        },
        {
          "expression": "-size +n/-n",
          "description": "Files larger (+) or smaller (-) than n"
        },
        {
          "expression": "-mtime n",
          "description": "Files modified n*24 hours ago"
        },
        {
          "expression": "-exec command {} \\;",
          "description": "Execute command on each found file"
        },
        {
          "expression": "-user username",
          "description": "Files owned by specific user"
        }
      ],
      "use_cases": [
